<%= form_for @user do |f| %>

<fieldset>
  <legend>Enter your details</legend>
  <div>
    <%= f.label_tag :username, autofocus: true%>
    <%= f.text_field_tag :username %>
  </div>

  <div>
    <%= f.label_tag :password %>
    <%= f.password_field_tag :password %>
  </div>

   <div>
    <%= f.label_tag :email %>
    <%= f.text_field_tag :email %>
  </div>

  <div>
    <%= f.submit_tag 'Log in' %>
  </div>
</fieldset>
<% end %>

