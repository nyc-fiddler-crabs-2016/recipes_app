<!DOCTYPE html>
<html>
<head>
  <title>RecipesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
	<% if current_user %>
	  <%= link_to "Log out", session_path, method: :delete, id: "logout-link" %>
	<%= link_to "My Recipes", user_path(current_user) %>
	<% else %>
	  <%= link_to "Register", new_user_path %>
	  <%= link_to "Login", new_session_path %>
	<% end %>
	

	</nav>
<%= render 'errors' %>
<%= render 'flash'%>
<%= yield %>

</body>
</html>
